{
  "manifest_version": 2,

  "name": "GitHub Superfilter",
  "version": "1.1.0",
  "author": "Tomer Ron",
  "description": "Adds a lovely filter to GitHub pull requests",
  "homepage_url": "https://github.com/TomerRon/github-superfilter",

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["bundle.js"]
    }
  ],

  "icons": {
    "48": "assets/icon48.png",
    "96": "assets/icon96.png",
    "128": "assets/icon128.png"
  }
}
