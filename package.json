{
  "name": "github-superfilter",
  "version": "1.0.1",
  "main": "src/index.ts",
  "author": "Tomer Ron",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf dist && webpack --mode=production",
    "build-release": "yarn build && cd dist && zip -r superfilter.zip .",
    "browser": "web-ext run -s dist",
    "lint": "tslint -t codeFrame -p .",
    "test": "jest",
    "start": "yarn run browser -p default",
    "start:sandbox": "yarn run browser",
    "watch": "webpack -w"
  },
  "devDependencies": {
    "@types/jest": "25.1.3",
    "copy-webpack-plugin": "5.1.1",
    "jest": "25.1.0",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.1",
    "tslint": "6.0.0",
    "tslint-functional-preset": "2.0.0",
    "tslint-loader": "3.5.4",
    "typescript": "3.8.2",
    "web-ext": "4.1.0",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/index.ts"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
