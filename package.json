{
  "name": "github-superfilter",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Tomer Ron",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf dist && webpack --mode=production",
    "build-release": "yarn build && zip -r dist/superfilter.zip dist",
    "browser": "web-ext run -s dist",
    "lint": "tslint -t codeFrame -p .",
    "test": "jest",
    "start": "yarn run browser -p default",
    "start:sandbox": "yarn run browser",
    "watch": "webpack -w"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "copy-webpack-plugin": "5.0.4",
    "jest": "24.9.0",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.0",
    "tslint": "5.20.0",
    "tslint-functional-preset": "1.5.0",
    "tslint-loader": "3.5.4",
    "typescript": "3.6.3",
    "web-ext": "3.2.0",
    "webpack": "4.41.0",
    "webpack-cli": "3.3.9"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/index.ts"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
